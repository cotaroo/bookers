<h1>Editing Book</h1>
<%= form_with model:@book, local:true do |f| %>
  <h4>Title</h4>
  <div class="field">
    <%= f.text_field :title %>
  </div>
  <h4>Body</h4>
  <div class="field">
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit 'Update Book' %>
  </div>
<% end %>

<%= link_to "Show", book_path(@book.id) %>
